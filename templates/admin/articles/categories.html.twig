{% extends 'admin/dashboard/index.html.twig' %}

{% block title %}EAER Admin{% endblock %}

{% block page_title %}Articles{% endblock %}
{% block page_subtitle %}Categories{% endblock %}

{% block page_content %}
    {% block breadcrumb %}{% endblock %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="panel">
                    <div class="panel-body">
                        <table class="table table-responsive table-hover">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Flag</th>
                                <th style="width: 100px"></th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for item in list %}
                                    <tr>
                                        <td style="vertical-align: middle;">{{ item.id }}</td>
                                        <td style="vertical-align: middle;">{{ item.name }}</td>
                                        <td><img style="max-width: 32px" class="img-responsive" src="{{ asset('flags/' ~ item.flag ) }}"></td>
                                        <td>
                                            <a href="" class="btn btn-small btn-primary"><i class="fa fa-edit"></i></a>
                                            <a href="" class="btn btn-small btn-danger"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-body">
                        <div class="panel-title margin-bottom">
                            Add new Category
                        </div>
                        {{ form_start(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
