{% extends 'admin/dashboard/index.html.twig' %}

{% block title %}EAER Admin{% endblock %}

{% block page_title %}Aspect{% endblock %}
{% block page_subtitle %}Menu{% endblock %}

{% block page_content %}
    {% block breadcrumb %}{% endblock %}
    <div class="container-fluid">
        <div class="col-md-8">
            <div class="panel">
                <div class="panel-body">
                    <table class="table table-responsive table-hover">
                        <thead>
                            <tr>
                                <th class="th-sm">Position</th>
                                <th>Title</th>
                                <th>URL</th>
                                <th class="th-sm">Status</th>
                                <th class="options"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in items %}
                                <tr>
                                    <td>{{ item.position }}</td>
                                    <td>{{ item.name }}</td>
                                    <td>{{ item.url }}</td>
                                    <td>
                                        {% if item.active == 1 %}
                                            <div class="label label-success">Active</div>
                                        {% else %}
                                            <div class="label label-warning">Hidden</div>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if item.active == 1 %}
                                            <a class="btn btn-sm btn-warning" href="{{ url('admin_aspect_menu_action_hide', {'id': item.id}) }}"><i class="fa fa-minus-circle"></i></a>
                                        {% else %}
                                            <a class="btn btn-sm btn-success" href="{{ url('admin_aspect_menu_action_unhide', {'id': item.id}) }}"><i class="fa fa-check-circle"></i></a>
                                        {% endif %}
                                        <a class="btn btn-sm btn-primary" href="{{ url('admin_aspect_menu_edit', {'id': item.id}) }}"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-sm btn-danger" href=""><i class="fa fa-times-circle"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel">
                <div class="panel-body">
                    {{ form_start(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <style>
        td {
            vertical-align: middle!important;
        }
        .options {
            width: 150px;
        }
        .th-sm {
            width: 80px;
        }
    </style>
{% endblock %}