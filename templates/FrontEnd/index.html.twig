            <div id="jerro-contact-form">
                <form action="index.php" method="post" id="contact_form">
                    <div class="row">
                        <div class="col-lg-6">
                            <div id="formFirstName"><input type="text" name="fname" id="fname" placeholder="First name"></div>
                        </div>
                        <div class="col-lg-6">
                            <div id="formLastName"><input type="text" name="lname" id="lname" placeholder="Last name"></div>
                        </div>
                    </div><!-- end .row -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div id="formEmail"><input type="text" name="email" id="email" placeholder="Email address"></div>
                        </div>
                        <div class="col-lg-12">
                            <div id="formSubject"><input type="text" name="subject" id="subject" placeholder="Subject"></div>
                        </div>
                        <div class="col-lg-12">
