    <!-- CONTACT -->

    <section id="contact" class="page pattern">
        <div class="section white">
            <div class="container title">
                <h1>CONTACT</h1>
            </div>
        </div>

        <div class="container" style="margin-top: 50px;">
            <div id="jerro-contact-form">
                {{ form_start(contact) }}
                {{ form_errors(contact) }}
                {% for message in app.flashes('success') %}
                    <div id="successMessage" class="alert alert-success">
                        {{ message }}
                    </div>
                    <script>
                        setTimeout(function() {
                            $('#successMessage').fadeOut('fast');
                        }, 30000); // <-- time in milliseconds
                    </script>
                {% endfor %}
                <div class="row">
                    <div class="col-lg-6">
                        {{ form_widget(contact.firstName) }}
                    </div>
                    <div class="col-lg-6">
                        {{ form_widget(contact.lastName) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_widget(contact.email) }}
                    </div>
                    <div class="col-lg-12">
                        {{ form_widget(contact.subject) }}
                    </div>
                    <div class="col-lg-12">
                        {{ form_widget(contact.message) }}
                    </div>
                    <div class="col-lg-12">
{#                        {{ label|default(form_label(contact.tos | raw)) }}#}
                        {{ form_row(contact.tos|raw) }}
                        <a href="//www.eaerproject.eu/privacy-policy" style="position: relative;top:-50px;font-weight: 900">Privacy Policy</a><br><br>
                    </div>
                </div>
                {{ form_end(contact) }}
                <div id="mail_success" class="success-text"><i class="icon-ok"></i> Your message has been successfully sent. We'll get back to you as soon as possible. Thank you</div>
                <div id="mail_fail" class="error-text"><i class="icon-remove"></i> Sorry, don't know what happened. Try later.</div>
            </div><!-- end #jerro-contact-form -->
        </div><!-- end .container -->
    </section><!-- end #contact -->
