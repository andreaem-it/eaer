    <!-- BLOG -->

    <section id="news" class="page pattern" style="padding:30px 0">
        <div class="section white" style="margin: 20px 0">
            <div class="container title">
                <h1>Latest News</h1>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 autoplay" style="max-height:550px">
                    {% for post in post_list %}
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="quick-post">
                                <div class="date"><span class="day">{{ post.datetime|date("d") }}</span><span>{{ post.datetime|date("M Y") }}</span></div>
                                <h2><a href="{{ url('blog_article', {'year' : post.datetime|date("Y"), 'month' : post.datetime|date("m") ,'slug' : post.slug }) }}">{{ post.title|truncate(20) }}</a></h2>
                                <div class="category">{{ post.category }}</div>
                                <a href="{{ url('blog_article', {'year' : post.datetime|date("Y"), 'month' : post.datetime|date("m") ,'slug' : post.slug }) }}">
                                    <div class="img">
                                        <div class="post-info" style="height: 300px; width: 300px; margin-left: 30px;">
                                            <p style="margin-top: 30%">
                                                {{ post.content|truncate(100)|striptags }}
                                            </p>
                                        </div>
                                        <img src="{{ asset(post.image) | imagine_filter('thumb', {"thumbnail": {"size": [300, 300] }}) }}" style="margin-left:30px">
                                    </div>
                                </a>
                            </div><!-- end .quick-post -->
                        </div>
                    {% endfor %}
                    <style>
                        .slick-slide {
                            height: 550px!important;
                        }
                    </style>
                </div><!-- end .col-lg-12 -->
            </div><!-- end .row -->
            <br><br>
            <div class="row mt-3 text-center">
                <a class="btn btn-primary btn-lg" href="{{ url('blog') }}">Go to the blog</a>
            </div>
        </div><!-- end .container -->
    </section><!-- end #blog -->


