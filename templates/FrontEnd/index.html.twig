                                            <p style="margin-top: 30%">
                                                {{ post.content|truncate(100)|raw }}
                                            </p>
                                        </div>
                                        <img src="{{ asset(post.image) | imagine_filter('my_thumb', {"thumbnail": {"size": [300, 300] }}) }}">
                                    </div>
                                </a>
                            </div><!-- end .quick-post -->
                        </div>
                    {% endfor %}
