{% extends 'FrontEnd/base.html.twig' %}
{% block page_title %}EAER Project - Blog{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% set img_url = 'http://www.eaerproject.eu/' ~ asset(post.0.image) %}
        <div class="post-header" style="height: 500px; background-image: url({{ img_url }}); background-position:center center; background-size:cover"></div>
        <section class="page" style="padding-bottom: 0!important;height:0px!important;">
            <div class="white" style="height: 100px!important;">
                <div class="container title title-section">
                    <h1 class="title-label">{{ post.0.title }}</h1>
                    <h4 class="category-label">Category: {{ post.0.category|replace({'-':' ' }) }}</h4>
                </div>
            </div>
        </section>
    </div>
    <div class="container" style="margin-top:50px">
        <nav class="breadcrumb">
            <a href="{{ url('front_end') }}">Home</a> / <a href="{{ url('blog') }}">Blog</a> / {{ post.0.category|replace({'-':' ' }) }} / {{ post.0.title }}
        </nav>
        <article style="margin:50px 0 100px 0;">
            <div class="row">
                <div class="col-md-12">
                    <div class="post-content">{{ post.0.content|raw }}</div>
                </div>
                <div class="col-md-12">
                    <div class="row" style="margin-top: 25px">
                        <div class="col-6">
                            {% if previous != null %}
                                <h4>
                                    <a class="pull-left" href="{{ url('blog_article', { 'id' : previous.id }) }}">< {{ previous.title }}</a>
                                </h4>
                            {% endif %}
                        </div>
                        <div class="col-6">
                            {% if next != null %}
                                <h4>
                                    <a class="pull-right" href="{{ url('blog_article', { 'id' : next.id }) }}">{{ next.title }} ></a>
                                </h4>
                            {% endif %}
                        </div>
                    </div>
                </div>

            </div>
            <div class="row mb-5" style="margin-bottom: 2rem">
                <div class="col-md-12">
                    <div class="float-left">
                        <a href="" onclick="window.history.go(-1); return false;" style="font-size: 20px">
                            Go back
                        </a>
                    </div>
                </div>
            </div>
        </article>

    </div>
    <style>
        .title-section {
            position: relative;
            top: -250px
        }
        .title-label {
            background: white!important;
            opacity: 0.8!important;
        }
        .category-label {
            background: white!important;
            border: 1px solid #000!important;
            padding: 10px!important;
            width: 25%!important;
            margin: 10px auto!important;
            opacity: 0.8!important;
        }
        .post-content {
            font-size: 20px;
            font-family: Verdana!important;
        }
    </style>
{% endblock %}
