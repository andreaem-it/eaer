{% extends 'FrontEnd/base.html.twig' %}

{% block page_title %}EAER Project - Blog{% endblock %}

{% block body %}
    <div class="container">
        <section class="page">
            <div class="section white">
                <div class="container title">
                    <h1>Latest Posts</h1>
                </div>
                <ul class="portfolio-navigation-1">
                    <li data-filter="all" data-role="button" class="button filter-1 anim150">All</li>
                    {% for category in category_list %}
                        <li data-filter="{{ category.name }}" data-tole="button" class="button filter-1 anim150">
                            <img src="flags/{{ category.flag }}" style="width:32px">
                        </li>
                    {% endfor %}

                    <li class="break"></li>
                </ul>
                <br>
                <ul id="portfolio-grid-1">
                {% for post in post_list %}
                    <li class="mix-1 {{ post.category }} mix_all card" style=" display: inline-block; opacity: 1; width: 100%">
                        <div class="row">
                            <div class="col-md-3">
                                <img src="{{ post.image }}" style="width:300px">
                            </div>
                            <div class="col-md-9">
                                <h2 class="title"><a href="{{ url('blog_article', {'year' : post.datetime|date("Y"), 'month' : post.datetime|date("m") ,'slug' : post.slug }) }}">{{ post.title }}</a></h2>
                                <h5>{{ post.datetime|date("m-d-Y") }}</h5>
                                <i>{{ post.content|truncate(150)|raw }}</i>
                            </div>
                        </div>
                    </li>
                {% endfor %}
                </ul>
            </div>
        </section>
        <style>
            .card {
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                transition: 0.3s;
                /*width: 100%;*/
                margin: 15px 15px;
            }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

            .container {
                padding: 2px 16px;
            }
            .card h2 {
                margin: 20px 0 10px 0!important;
            }
            .card i {
                margin-bottom: 15px;
            }
            .card a {
                margin-top: 15px!important;
            }
        </style>
    </div>
{% endblock %}
