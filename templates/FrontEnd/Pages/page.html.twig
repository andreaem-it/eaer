{% extends 'FrontEnd/base.html.twig' %}
{% block page_title %}EAER Project - {{ content.pageName|capitalize }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% if content.hasCover == 1 %}
            <div class="row row-no-gutters">
                <div class="col-sm-12 ">
                    <img src="{{ content.coverImage }}" class="img-responsive">
                </div>
            </div>
        {% endif %}
    </div>
    <div class="container" style="margin-bottom: 100px; margin-top: 100px">
        <div class="row" style="font-size:18px">
            <div class="col-md-12">
                <p >
                    {{ content.content|raw }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}